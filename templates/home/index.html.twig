{% extends 'base.html.twig' %}

{% block title %}GameShop - Accueil{% endblock %}

{% block body %}
<div class="container">
    <div style="text-align: center; padding: 3rem 0; margin-bottom: 2rem;">
        <h1>Bienvenue sur GameShop</h1>
        <p style="color: #666; font-size: 1.1rem;">Votre boutique de jeux vidéo en ligne</p>
    </div>

    <h2 style="margin-bottom: 1.5rem;">Nos Produits</h2>
    
    {% if products|length > 0 %}
        <div class="products-grid">
            {% for product in products %}
                <div class="product-card">
                    <div class="image-container">
                        <img src="{{ product.image }}" alt="{{ product.titre }}" onerror="this.src='https://via.placeholder.com/400x400?text=Image+Non+Disponible'">
                    </div>
                    <div class="content">
                        <h3>{{ product.titre }}</h3>
                        <p class="price">{{ product.prix|number_format(2, ',', ' ') }} €</p>
                        <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-primary" style="width: 100%; text-align: center; margin-top: 0.5rem;">
                            Voir détails
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="card" style="text-align: center; padding: 3rem;">
            <p style="color: #888; margin-bottom: 1rem;">Aucun produit disponible pour le moment.</p>
            <a href="{{ path('app_product_new') }}" class="btn btn-primary">
                Ajouter un produit
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
