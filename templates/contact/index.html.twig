{% extends 'base.html.twig' %}

{% block title %}Contact - GameShop{% endblock %}

{% block body %}
<div class="container" style="max-width: 600px;">
    <h1>Contactez-nous</h1>
    <p style="color: #666; margin-bottom: 2rem;">Des questions sur nos produits ? Écrivez-nous !</p>

    <div class="card">
        {{ form_start(form) }}
            <div style="margin-bottom: 1rem;">
                {{ form_row(form.username, {label: 'Nom'}) }}
            </div>
            <div style="margin-bottom: 1rem;">
                {{ form_row(form.email, {label: 'Email'}) }}
            </div>
            <div style="margin-bottom: 1rem;">
                {{ form_row(form.subject, {label: 'Sujet'}) }}
            </div>
            <div style="margin-bottom: 1rem;">
                {{ form_row(form.message, {label: 'Message'}) }}
            </div>

            <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 1rem;">
                Envoyer
            </button>
        {{ form_end(form) }}
    </div>
    
    <p style="margin-top: 2rem;"><a href="{{ path('app_home') }}">← Retour à l'accueil</a></p>
</div>
{% endblock %}

