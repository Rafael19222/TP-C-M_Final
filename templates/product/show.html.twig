{% extends 'base.html.twig' %}

{% block title %}{{ product.titre }} - GameShop{% endblock %}

{% block body %}
<style>
/* ==================== PRODUCT DETAIL PAGE ==================== */
.product-page {
    background: #fff;
    min-height: calc(100vh - 200px);
}

.product-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0;
}

.product-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 85vh;
}

/* ===== IMAGE SECTION ===== */
.product-gallery {
    background: linear-gradient(145deg, #f8f9fa 0%, #e9ecef 100%);
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px;
    overflow: hidden;
}

.product-gallery::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 30% 50%, rgba(255,255,255,0.8) 0%, transparent 60%);
    pointer-events: none;
}

.gallery-wrapper {
    position: relative;
    width: 100%;
    max-width: 550px;
    z-index: 1;
}

.main-image-container {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 25px 80px rgba(0,0,0,0.15);
    background: #fff;
}

.main-image {
    width: 100%;
    height: auto;
    max-height: 600px;
    object-fit: contain;
    display: block;
    transition: transform 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.main-image-container:hover .main-image {
    transform: scale(1.03);
}

.image-badge {
    position: absolute;
    top: 20px;
    left: 20px;
    background: #1a1a1a;
    color: #fff;
    padding: 8px 16px;
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    border-radius: 4px;
}

.no-image-placeholder {
    width: 100%;
    height: 500px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #fff;
    border-radius: 16px;
}

.no-image-placeholder svg {
    width: 80px;
    height: 80px;
    margin-bottom: 20px;
    opacity: 0.8;
}

.no-image-placeholder span {
    font-size: 1rem;
    opacity: 0.9;
}

/* ===== INFO SECTION ===== */
.product-info {
    padding: 60px 50px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: #fff;
}

.product-info-inner {
    max-width: 480px;
}

.product-category {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: #6c757d;
    margin-bottom: 12px;
}

.product-title {
    font-size: 2.2rem;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0 0 16px 0;
    line-height: 1.2;
    letter-spacing: -0.5px;
}

.product-price-container {
    display: flex;
    align-items: baseline;
    gap: 12px;
    margin-bottom: 24px;
}

.product-price {
    font-size: 1.8rem;
    font-weight: 700;
    color: #1a1a1a;
}

.product-price-info {
    font-size: 0.85rem;
    color: #6c757d;
}

.product-divider {
    height: 1px;
    background: linear-gradient(90deg, #e9ecef 0%, transparent 100%);
    margin: 24px 0;
}

.product-description {
    font-size: 1rem;
    line-height: 1.7;
    color: #495057;
    margin-bottom: 32px;
}

/* ===== FEATURES ===== */
.product-features {
    display: flex;
    gap: 24px;
    margin-bottom: 32px;
}

.feature-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.85rem;
    color: #495057;
}

.feature-icon {
    width: 20px;
    height: 20px;
    color: #28a745;
}

/* ===== ADD TO CART ===== */
.add-to-cart-section {
    margin-bottom: 32px;
}

.btn-add-cart {
    width: 100%;
    padding: 18px 32px;
    background: linear-gradient(135deg, #1a1a1a 0%, #333 100%);
    color: #fff;
    border: none;
    border-radius: 12px;
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
}

.btn-add-cart:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.3);
}

.btn-add-cart svg {
    width: 20px;
    height: 20px;
}

/* ===== ACCORDION ===== */
.info-accordion {
    border-top: 1px solid #e9ecef;
    margin-bottom: 32px;
}

.accordion-item {
    border-bottom: 1px solid #e9ecef;
}

.accordion-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 18px 0;
    cursor: pointer;
    transition: color 0.2s ease;
}

.accordion-header:hover {
    color: #6c757d;
}

.accordion-title {
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    text-transform: uppercase;
}

.accordion-icon {
    font-size: 1.2rem;
    transition: transform 0.3s ease;
}

/* ===== ADMIN ACTIONS ===== */
.admin-section {
    margin-top: 40px;
    padding-top: 32px;
    border-top: 2px solid #e9ecef;
}

.admin-title {
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    color: #6c757d;
    margin-bottom: 16px;
}

.admin-actions {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
}

.btn-admin {
    padding: 12px 24px;
    border-radius: 8px;
    font-size: 0.85rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    display: inline-flex;
    align-items: center;
    gap: 8px;
}

.btn-back {
    background: #f8f9fa;
    color: #495057;
    border: 1px solid #dee2e6;
}

.btn-back:hover {
    background: #e9ecef;
    text-decoration: none;
}

.btn-edit {
    background: #0d6efd;
    color: #fff;
    border: none;
}

.btn-edit:hover {
    background: #0b5ed7;
    text-decoration: none;
}

.btn-delete {
    background: #dc3545;
    color: #fff;
    border: none;
    cursor: pointer;
    font-family: inherit;
}

.btn-delete:hover {
    background: #bb2d3b;
}

/* ===== RESPONSIVE ===== */
@media (max-width: 1200px) {
    .product-info {
        padding: 40px 30px;
    }
    
    .product-title {
        font-size: 1.8rem;
    }
}

@media (max-width: 992px) {
    .product-layout {
        grid-template-columns: 1fr;
        min-height: auto;
    }
    
    .product-gallery {
        min-height: 50vh;
        padding: 30px;
    }
    
    .gallery-wrapper {
        max-width: 400px;
    }
    
    .main-image {
        max-height: 400px;
    }
    
    .product-info {
        padding: 40px 24px;
    }
    
    .product-info-inner {
        max-width: 100%;
    }
}

@media (max-width: 576px) {
    .product-gallery {
        padding: 20px;
        min-height: 40vh;
    }
    
    .main-image {
        max-height: 300px;
    }
    
    .product-title {
        font-size: 1.5rem;
    }
    
    .product-price {
        font-size: 1.5rem;
    }
    
    .product-features {
        flex-direction: column;
        gap: 12px;
    }
    
    .admin-actions {
        flex-direction: column;
    }
    
    .btn-admin {
        width: 100%;
        justify-content: center;
    }
}
</style>

<div class="product-page">
    <div class="product-container">
        <div class="product-layout">
            <!-- Image Section -->
            <div class="product-gallery">
                <div class="gallery-wrapper">
                    {% if product.image %}
                        <div class="main-image-container">
                            <span class="image-badge">Nouveau</span>
                            <img src="{{ product.image }}" alt="{{ product.titre }}" class="main-image">
                        </div>
                    {% else %}
                        <div class="no-image-placeholder">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            <span>Aucune image disponible</span>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Info Section -->
            <div class="product-info">
                <div class="product-info-inner">
                    <span class="product-category">Jeu Vidéo</span>
                    <h1 class="product-title">{{ product.titre }}</h1>
                    
                    <div class="product-price-container">
                        <span class="product-price">{{ product.prix|number_format(2, ',', ' ') }} €</span>
                        <span class="product-price-info">TTC</span>
                    </div>

                    <div class="product-divider"></div>

                    <p class="product-description">
                        Découvrez {{ product.titre }}, un titre incontournable de notre collection. 
                        Plongez dans une expérience gaming exceptionnelle et vivez des moments inoubliables.
                    </p>

                    <div class="product-features">
                        <div class="feature-item">
                            <svg class="feature-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                            <span>En stock</span>
                        </div>
                        <div class="feature-item">
                            <svg class="feature-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                            <span>Livraison gratuite</span>
                        </div>
                    </div>

                    <div class="add-to-cart-section">
                        <button class="btn-add-cart">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                            </svg>
                            AJOUTER AU PANIER
                        </button>
                    </div>

                    <div class="info-accordion">
                        <div class="accordion-item">
                            <div class="accordion-header">
                                <span class="accordion-title">Description détaillée</span>
                                <span class="accordion-icon">›</span>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <div class="accordion-header">
                                <span class="accordion-title">Informations de livraison</span>
                                <span class="accordion-icon">›</span>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <div class="accordion-header">
                                <span class="accordion-title">Retours et remboursements</span>
                                <span class="accordion-icon">›</span>
                            </div>
                        </div>
                    </div>

                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER') %}
                    <div class="admin-section">
                        <p class="admin-title">Administration</p>
                        <div class="admin-actions">
                            <a href="{{ path('app_product_index') }}" class="btn-admin btn-back">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                                </svg>
                                Retour à la liste
                            </a>
                            <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn-admin btn-edit">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                </svg>
                                Modifier
                            </a>
                            <form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                <button type="submit" class="btn-admin btn-delete">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                    </svg>
                                    Supprimer
                                </button>
                            </form>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
