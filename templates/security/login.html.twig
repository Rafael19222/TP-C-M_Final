{% extends 'base.html.twig' %}

{% block title %}Connexion - GameShop{% endblock %}

{% block body %}
<div class="container" style="max-width: 400px;">
    <h1 style="text-align: center;">Connexion</h1>
    <p style="text-align: center; color: #666; margin-bottom: 2rem;">Connectez-vous à votre compte</p>

    {% if error %}
        <div class="flash-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="card" style="text-align: center;">
            <p>Vous êtes connecté en tant que {{ app.user.userIdentifier }}</p>
            <a href="{{ logout_path() }}" class="btn btn-secondary">Déconnexion</a>
        </div>
    {% else %}
        <div class="card">
            <form method="post">
                <div style="margin-bottom: 1.25rem;">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus>
                </div>
                
                <div style="margin-bottom: 1.25rem;">
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" autocomplete="current-password" required>
                </div>
                
                <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                <div style="margin-bottom: 1.5rem;">
                    <label style="display: flex; align-items: center; cursor: pointer;">
                        <input type="checkbox" name="_remember_me" style="width: auto; margin-right: 0.5rem;">
                        <span style="font-weight: 400;">Se souvenir de moi</span>
                    </label>
                </div>

                <button class="btn btn-primary" type="submit" style="width: 100%;">
                    Se connecter
                </button>
            </form>
            
            <p style="text-align: center; margin-top: 1.5rem; color: #666;">
                <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
            </p>
        </div>
        
        <p style="text-align: center; margin-top: 1.5rem; color: #666;">
            Pas encore de compte ? <a href="{{ path('app_register') }}">S'inscrire</a>
        </p>
    {% endif %}
</div>
{% endblock %}
