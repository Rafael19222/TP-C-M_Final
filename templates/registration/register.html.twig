{% extends 'base.html.twig' %}

{% block title %}Inscription - GameShop{% endblock %}

{% block body %}
<div class="container" style="max-width: 400px;">
    <h1 style="text-align: center;">Inscription</h1>
    <p style="text-align: center; color: #666; margin-bottom: 2rem;">Créez votre compte GameShop</p>

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="flash-error">{{ flash_error }}</div>
    {% endfor %}

    <div class="card">
        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            <div style="margin-bottom: 1.25rem;">
                {{ form_row(registrationForm.username, {label: 'Nom d\'utilisateur'}) }}
            </div>
            <div style="margin-bottom: 1.25rem;">
                {{ form_row(registrationForm.email, {label: 'Email'}) }}
            </div>
            <div style="margin-bottom: 1.25rem;">
                {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}
            </div>
            <div style="margin-bottom: 1.5rem;">
                {{ form_row(registrationForm.agreeTerms, {label: 'J\'accepte les conditions d\'utilisation'}) }}
            </div>

            <button type="submit" class="btn btn-primary" style="width: 100%;">S'inscrire</button>
        {{ form_end(registrationForm) }}
    </div>
    
    <p style="text-align: center; margin-top: 1.5rem; color: #666;">
        Déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a>
    </p>
</div>
{% endblock %}
